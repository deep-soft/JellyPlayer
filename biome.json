{
	"$schema": "https://biomejs.dev/schemas/1.9.2/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off",
				"useEnumInitializers": "off"
			},
			"a11y": {
				"useKeyWithClickEvents": "off",
				"useMediaCaption": "off"
			},
			"correctness": {
				"useExhaustiveDependencies": "off",
				"noUnusedImports": "off"
			},
			"suspicious": {
				"noExplicitAny": "off"
			},
			"nursery": {
				"useComponentExportOnlyModules": "error"
			}
		}
	},
	"files": {
		"include": [
			"src/**/*.ts",
			"src/**/*.tsx",
			"src/**/*.jsx",
			"src/**/*.js",
			"*.json",
			"*.scss"
		],
		"ignoreUnknown": true
	},
	"formatter": {
		"formatWithErrors": true
	}
}
