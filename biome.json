{
	"$schema": "https://biomejs.dev/schemas/1.5.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off"
			},
			"a11y": {
				"useKeyWithClickEvents": "off"
			},
			"correctness": {
				"useExhaustiveDependencies": "off"
			},
			"nursery": {
				"noUnusedImports": "off"
			}
		}
	},
	"files": {
		"include": [
			"src/**/*.ts",
			"src/**/*.tsx",
			"src/**/*.jsx",
			"src/**/*.js",
			"*.json"
		],
		"ignoreUnknown": true
	}
}
